<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <corners android:radius="@dimen/flashback_corner_radius" />
            <gradient
                android:angle="135"
                android:endColor="#3B54FF"
                android:startColor="#15182E" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/flashback_corner_radius" />
            <gradient
                android:angle="90"
                android:centerColor="#33FFFFFF"
                android:endColor="#00FFFFFF"
                android:startColor="#00FFFFFF"
                android:tileMode="repeat"
                android:type="linear" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/flashback_corner_radius" />
            <gradient
                android:angle="0"
                android:centerColor="#22000000"
                android:endColor="#00FFFFFF"
                android:startColor="#00FFFFFF"
                android:tileMode="repeat"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
