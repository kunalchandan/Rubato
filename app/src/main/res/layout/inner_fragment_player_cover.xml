<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp">

    <ImageView
        android:id="@+id/now_playing_song_cover_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <one.chandan.rubato.ui.view.VisualizerView
        android:id="@+id/now_playing_visualizer_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintEnd_toEndOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintStart_toStartOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintTop_toTopOf="@+id/now_playing_song_cover_image_view" />

    <Button
        android:id="@+id/now_playing_visualizer_settings_button"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/visualizer_settings_title"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:alpha="0.8"
        android:visibility="gone"
        app:cornerRadius="64dp"
        app:icon="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintTop_toTopOf="@+id/now_playing_song_cover_image_view" />

    <Button
        android:id="@+id/now_playing_tap_button"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="64dp"
        android:alpha="0.7"
        app:icon="@drawable/ic_tap"
        app:layout_constraintEnd_toEndOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/now_playing_song_cover_image_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/now_playing_song_cover_button_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@drawable/gradient_player_cover_background_image"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/inner_button_top_left"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_file_download" />

        <Button
            android:id="@+id/inner_button_top_right"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_playlist_add" />

        <Button
            android:id="@+id/inner_button_visualizer"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_graphic_eq" />

        <Button
            android:id="@+id/inner_button_bottom_left"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_mix_from_here" />

        <Button
            android:id="@+id/inner_button_bottom_right"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_bookmark" />

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/now_playing_cover_action_flow"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:constraint_referenced_ids="inner_button_top_left,inner_button_top_right,inner_button_visualizer,inner_button_bottom_left,inner_button_bottom_right"
            app:flow_horizontalGap="16dp"
            app:flow_horizontalStyle="packed"
            app:flow_maxElementsWrap="3"
            app:flow_verticalGap="16dp"
            app:flow_verticalStyle="packed"
            app:flow_wrapMode="chain"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/inner_button_bottom_right_alternative"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_lyrics"
            app:layout_constraintBottom_toBottomOf="@+id/inner_button_bottom_right"
            app:layout_constraintEnd_toEndOf="@+id/inner_button_bottom_right"
            app:layout_constraintStart_toStartOf="@+id/inner_button_bottom_right"
            app:layout_constraintTop_toTopOf="@+id/inner_button_bottom_right" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
