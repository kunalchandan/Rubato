<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="24dp">

    <ImageView
        android:id="@+id/now_playing_song_cover_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent" />

    <one.chandan.rubato.ui.view.VisualizerView
        android:id="@+id/now_playing_visualizer_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:importantForAccessibility="no"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintEnd_toEndOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintStart_toStartOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintTop_toTopOf="@+id/now_playing_song_cover_image_view" />

    <Button
        android:id="@+id/now_playing_visualizer_settings_button"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:contentDescription="@string/visualizer_settings_title"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:alpha="0.8"
        android:visibility="gone"
        app:cornerRadius="64dp"
        app:icon="@drawable/ic_settings"
        app:layout_constraintStart_toStartOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintTop_toTopOf="@+id/now_playing_song_cover_image_view" />

    <Button
        android:id="@+id/now_playing_tap_button"
        style="@style/Widget.Material3.Button.TonalButton.Icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="64dp"
        android:alpha="0.7"
        app:icon="@drawable/ic_tap"
        app:layout_constraintEnd_toEndOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintBottom_toBottomOf="@+id/now_playing_song_cover_image_view" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/now_playing_song_cover_button_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/gradient_player_cover_background_image"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintEnd_toEndOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintStart_toStartOf="@+id/now_playing_song_cover_image_view"
        app:layout_constraintTop_toTopOf="@+id/now_playing_song_cover_image_view">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cover_guideline_vertical_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cover_guideline_vertical_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cover_guideline_horizontal_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.33" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/cover_guideline_horizontal_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66" />

        <Button
            android:id="@+id/inner_button_top_left"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_file_download"
            app:layout_constraintBottom_toTopOf="@+id/cover_guideline_horizontal_top"
            app:layout_constraintEnd_toStartOf="@+id/cover_guideline_vertical_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inner_label_top_left"
            style="@style/LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:alpha="0.85"
            android:text="@string/player_cover_action_download"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/inner_button_top_left"
            app:layout_constraintStart_toStartOf="@id/inner_button_top_left"
            app:layout_constraintTop_toBottomOf="@id/inner_button_top_left" />

        <Button
            android:id="@+id/inner_button_top_right"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_playlist_add"
            app:layout_constraintBottom_toTopOf="@+id/cover_guideline_horizontal_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover_guideline_vertical_right"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/inner_label_top_right"
            style="@style/LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:alpha="0.85"
            android:text="@string/player_cover_action_add_playlist"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/inner_button_top_right"
            app:layout_constraintStart_toStartOf="@id/inner_button_top_right"
            app:layout_constraintTop_toBottomOf="@id/inner_button_top_right" />

        <Button
            android:id="@+id/inner_button_visualizer"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_graphic_eq"
            app:layout_constraintBottom_toTopOf="@+id/cover_guideline_horizontal_bottom"
            app:layout_constraintEnd_toStartOf="@+id/cover_guideline_vertical_right"
            app:layout_constraintStart_toStartOf="@+id/cover_guideline_vertical_left"
            app:layout_constraintTop_toTopOf="@+id/cover_guideline_horizontal_top" />

        <TextView
            android:id="@+id/inner_label_visualizer"
            style="@style/LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:alpha="0.85"
            android:text="@string/player_cover_action_visualizer"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/inner_button_visualizer"
            app:layout_constraintStart_toStartOf="@id/inner_button_visualizer"
            app:layout_constraintTop_toBottomOf="@id/inner_button_visualizer" />

        <Button
            android:id="@+id/inner_button_bottom_left"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_radio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cover_guideline_vertical_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cover_guideline_horizontal_bottom" />

        <TextView
            android:id="@+id/inner_label_song_radio"
            style="@style/LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:alpha="0.85"
            android:text="@string/player_cover_action_song_radio"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/inner_button_bottom_left"
            app:layout_constraintStart_toStartOf="@id/inner_button_bottom_left"
            app:layout_constraintTop_toBottomOf="@id/inner_button_bottom_left" />

        <Button
            android:id="@+id/inner_button_bottom_right"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_bookmark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cover_guideline_vertical_right"
            app:layout_constraintTop_toBottomOf="@+id/cover_guideline_horizontal_bottom" />

        <Button
            android:id="@+id/inner_button_bottom_right_alternative"
            style="@style/Widget.Material3.Button.TonalButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_margin="4dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:cornerRadius="30dp"
            app:icon="@drawable/ic_lyrics"
            app:layout_constraintBottom_toBottomOf="@+id/inner_button_bottom_right"
            app:layout_constraintEnd_toEndOf="@+id/inner_button_bottom_right"
            app:layout_constraintStart_toStartOf="@+id/inner_button_bottom_right"
            app:layout_constraintTop_toTopOf="@+id/inner_button_bottom_right" />

        <TextView
            android:id="@+id/inner_label_lyrics"
            style="@style/LabelSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:alpha="0.85"
            android:text="@string/player_cover_action_lyrics"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/inner_button_bottom_right_alternative"
            app:layout_constraintStart_toStartOf="@id/inner_button_bottom_right_alternative"
            app:layout_constraintTop_toBottomOf="@id/inner_button_bottom_right_alternative" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
