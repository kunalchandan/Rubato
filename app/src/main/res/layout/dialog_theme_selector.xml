<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/theme_selector_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/theme_selector_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/theme_selector_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/theme_selector_title"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

        <TextView
            android:id="@+id/theme_selector_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:text="@string/theme_selector_subtitle"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

        <TextView
            android:id="@+id/theme_selector_section_system"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/theme_section_system"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/theme_selector_system_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="4dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/theme_selector_section_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/theme_section_light"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/theme_selector_light_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="4dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/theme_selector_section_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/theme_section_dark"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/theme_selector_dark_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="4dp"
            android:nestedScrollingEnabled="false" />

        <TextView
            android:id="@+id/theme_selector_section_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/theme_section_custom"
            android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/theme_custom_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/theme_custom_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/theme_custom_title"
                        android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                        android:textColor="?attr/colorOnSurface" />

                    <ImageView
                        android:id="@+id/theme_custom_check"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:contentDescription="@string/settings_theme"
                        android:src="@drawable/ic_check"
                        android:tint="?attr/colorPrimary"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/theme_custom_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/theme_custom_subtitle"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_custom_primary_label"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <View
                            android:id="@+id/theme_custom_primary_swatch"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/theme_color_swatch"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/theme_custom_primary_label" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_custom_secondary_label"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <View
                            android:id="@+id/theme_custom_secondary_swatch"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/theme_color_swatch"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/theme_custom_secondary_label" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/theme_custom_tertiary_label"
                            android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                        <View
                            android:id="@+id/theme_custom_tertiary_swatch"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/theme_color_swatch"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="@string/theme_custom_tertiary_label" />
                    </LinearLayout>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/theme_custom_apply_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/theme_custom_apply"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
