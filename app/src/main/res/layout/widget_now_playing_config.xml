<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/widget_config_source_label"
        android:textSize="14sp" />

    <RadioGroup
        android:id="@+id/widget_source_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:checkedButton="@+id/widget_source_queue">

        <RadioButton
            android:id="@+id/widget_source_queue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_source_queue" />

        <RadioButton
            android:id="@+id/widget_source_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_source_recent" />

        <RadioButton
            android:id="@+id/widget_source_none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/widget_config_source_none" />
    </RadioGroup>

    <Button
        android:id="@+id/widget_config_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/widget_config_add" />
</LinearLayout>
